

<h1>Recipes</h1>

<div id="recipes">
  <% @recipes.each do |recipe| %>
    <%= render recipe %>
    <% if (current_user && current_user.id == recipe.user_id) || recipe.public %>
      <p>
        <%= link_to "Show this recipe", recipe %>
      </p>
    <% end %>
  <% end %>
</div>

<% if user_signed_in? %>
  <%= link_to "New recipe", new_recipe_path %>
<% end %>
